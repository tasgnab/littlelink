# Database
DATABASE_URL=postgresql://username:password@host/database

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
ALLOWED_USER_EMAIL=your-email@example.com

# Rate Limiting (Optional - defaults shown)
# API routes rate limit
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW_MS=60000

# Redirect routes rate limit (higher for primary function)
RATE_LIMIT_REDIRECT_REQUESTS=300
RATE_LIMIT_REDIRECT_WINDOW_MS=60000

# Auth routes rate limit (prevent brute force)
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW_MS=900000

# Strict rate limit for sensitive operations (API keys, etc.)
RATE_LIMIT_STRICT_REQUESTS=5
RATE_LIMIT_STRICT_WINDOW_MS=60000

# Geolocation Provider
# IP Geolocation via Abstract API (https://www.abstractapi.com/api/ip-geolocation-api)
GEOLOCATION_PROVIDER=abstract-api
ABSTRACT_API_KEY=your_abstract_api_key_here

NEXT_PUBLIC_GRAVATAR=https://gravatar.com/avatar/your-gravatar-hash?v=timestamp&size=256
NEXT_PUBLIC_TITLE=Your App Title
NEXT_PUBLIC_TITLE_TAGLINE=Your App Tagline


API_KEY=your_api_key_here